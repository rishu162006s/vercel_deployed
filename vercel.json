{
 
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/aibattle.py"
    }
  ],
  "builds": [
    {
      "src": "api/aibattle.py",
      "use": "@vercel/python"
    },
    {
      "src": "requirements.txt",
      "use": "@vercel/python"
    }
  ],
  "installCommand": "pip install -r requirements.txt",
  "outputDirectory": ".",
  "env": {
    "PYTHONUNBUFFERED": "1",
    "MODEL_NAME": "Qwen/Qwen2.5-7B-Instruct",
    "MAX_FILE_SIZE": "10000000",
    "CHUNK_SIZE": "1000",
    "CHUNK_OVERLAP": "200",
    "CACHE_DIR": "/tmp/model_cache"
  }
}
